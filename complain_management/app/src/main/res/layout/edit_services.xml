<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_services_activity">

    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/page_edit_services_ek1"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/_bg__edit_services_ek2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/_bg__edit_services_ek2_shape"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/edit_services_ek3"
                android:layout_width="288dp"
                android:layout_height="73dp"
                android:text="@string/edit_services_ek3_string"
                android:textColor="@color/edit_services_ek3_color"
                android:textSize="48sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="176dp" />

            <ImageButton
                android:id="@+id/edit_services_add_services_box"
                android:layout_width="289dp"
                android:layout_height="77dp"
                android:background="@drawable/edit_services_add_services_box_shape"
                android:contentDescription="Description of the button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.586"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.405" />

            <TextView
                android:id="@+id/add_service"
                android:layout_width="166dp"
                android:layout_height="42dp"
                android:text="@string/add_service_string"
                android:textColor="@color/edit_services_ek3_color"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/edit_services_add_services_box"
                app:layout_constraintStart_toStartOf="@+id/edit_services_add_services_box"
                app:layout_constraintTop_toTopOf="@+id/edit_services_add_services_box"
                app:layout_constraintVertical_bias="0.655" />

            <ImageButton
                android:id="@+id/edit_services_existing_service_box"
                android:layout_width="293dp"
                android:layout_height="81dp"
                android:background="@drawable/edit_services_existing_service_box_shape"
                android:contentDescription="Description of the button"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="402dp" />

            <TextView
                android:id="@+id/existing_service"
                android:layout_width="219dp"
                android:layout_height="38dp"
                android:text="@string/existing_service_string"
                android:textColor="@color/edit_services_ek3_color"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/edit_services_existing_service_box"
                app:layout_constraintStart_toStartOf="@+id/edit_services_existing_service_box"
                app:layout_constraintTop_toTopOf="@+id/edit_services_existing_service_box"
                app:layout_constraintVertical_bias="0.511" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>