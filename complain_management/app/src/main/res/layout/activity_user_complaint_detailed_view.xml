<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/final_peach"
    tools:context=".user_complaint_detailed_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:background="@drawable/complain_view_detailed_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Type: "
            android:layout_gravity="center_vertical"
            android:textColor="#EA6d35"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/user_complaint_detailed_view_type_text"
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:minHeight="25dp"
            android:textStyle="bold"
            android:text="TextView"
            android:textColor="@color/black" />

    </LinearLayout>

        <LinearLayout
            android:background="@drawable/complain_view_detailed_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Subject: "
            android:layout_gravity="center_vertical"
            android:textColor="#EA6d35"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/user_complaint_detailed_view_subject_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="5dp"
            android:minHeight="30dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:text="TextView" />
    </LinearLayout>

        <LinearLayout
            android:background="@drawable/complain_view_detailed_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Description: "
            android:layout_gravity="center_vertical"
            android:textColor="#EA6d35"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_complaint_detailed_view_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="5dp"
            android:scrollbars="vertical"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:minHeight="40dp"
            android:textColor="@color/black"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/complain_view_detailed_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:text="Complaint Date/Time: "
            android:textColor="#EA6d35"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/user_complaint_detailed_view_complaint_registered_text"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:layout_marginEnd="8dp"
            android:text="TextView" />
    </LinearLayout>

        <LinearLayout
            android:background="@drawable/complain_view_detailed_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:text="Resolved Date/Time: "
            android:textColor="#EA6d35"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_complaint_detailed_view_complaint_resolved_date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:textColor="@color/black"
            android:text="TextView" />
    </LinearLayout>

        <ImageView
            android:id="@+id/user_complaint_detailed_view_image_submitted_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="90dp"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/user_complaint_detailed_view_complaint_resolved_successfully_button"
            android:layout_width="300dp"
            android:background="@drawable/button_complain_recycler_view"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:text="Resolved ? " />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>