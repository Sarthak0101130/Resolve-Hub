<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_profile_view">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/user_profile_view_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name" />
        <TextView
            android:id="@+id/user_profile_view_age_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age" />

        <TextView
            android:id="@+id/user_profile_view_phone_no_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="phone_no" />

        <TextView
            android:id="@+id/user_profile_view_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email" />
        <TextView
            android:id="@+id/user_profile_view_total_complains_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Complains" />

        <TextView
            android:id="@+id/user_profile_view_resolved_complains_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resolved Complains"/>

        <TextView
            android:id="@+id/user_profile_view_pending_complains_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pending Complains" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_profile_view_flat_no_text"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="flatNo" />

            <TextView
                android:id="@+id/user_profile_view_building_no_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Building No" />

            <TextView
                android:id="@+id/user_profile_view_building_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Building Name" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>